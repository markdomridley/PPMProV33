<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.android.volley.toolbox.NetworkImageView android:id="@+id/networkImageView" android:padding="15dp" android:layout_width="125dp" android:layout_height="125dp" android:src="@mipmap/ic_action_camera" android:layout_centerHorizontal="true" />
    <TextView android:id="@+id/itemId" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="wrap_content" />
    <TextView android:id="@+id/columnOne" android:padding="2dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="5dp" android:text="Title and Defect Info" android:layout_weight="1.0" />
    <TextView android:id="@+id/columnTwo" android:padding="2dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="5dp" android:layout_marginRight="10dp" android:text="Item Status" android:layout_weight="1.0" />
</LinearLayout>
